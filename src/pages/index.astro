---
// Home Page
// ------------
// Description: The home page is a page that displays the most important information.

// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - Blocks
import Hero from '../components/blocks/hero/MediaHeroCTA.astro'
import Statistics from '../components/blocks/stats/Statistics.astro'
import Services from '../components/blocks/services/ServicesBasic.astro'
import Slider from '../components/blocks/slider/BrandSlider.astro'
import Work from '../components/blocks/work/WorkBasic.astro'
import Testimonials from '../components/blocks/testimonials/TestimonialsAlt.astro'
import Blog from '../components/blocks/blog/PostCards.astro'

// Content
// - SEO
const SEO = {
	title: 'Pytagora | Agency Theme Template',
	description:
		'Pytagora is a creative studio helping brands find their voice, shape their presence, and make things people remember.'
}
// - Hero
const hero = {
	title: 'We are Pytagora.',
	text: 'We don’t do generic. We do design that fits, moves, and grows with you — grounded in strategy and made to stand out in a sea of sameness.'
}
// - Statistics
const statistics = {
	text: 'We’re <strong>pytagora</strong> — a small, sharp creative studio that believes in good ideas, clean builds, and design that actually does something. We help brands shape their identity, tell their story, and launch digital experiences people remember (for the right reasons).'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={hero.title} text={hero.text} />
	<Statistics text={statistics.text} />
	<Services />
	<Slider />
	<Work />
	<Testimonials />
	<Blog />
</Layout>
