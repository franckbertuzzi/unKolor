---
// Blog Author Page
// ------------
// Description: The blog author page is a page that displays all the blog posts written by a specific author.

// Components
// - Layout
import Layout from '../../../layouts/Layout.astro'
import Section from '../../../components/ui/Section.astro'
import Row from '../../../components/ui/Row.astro'
import Col from '../../../components/ui/Col.astro'
// - Blocks
import BlogCard from '../../../components/ui/cards/BlogCard.astro'
import Hero from '../../../components/blocks/hero/BasicHeroCTA.astro'
// - Collection
import { getCollection } from 'astro:content'

// Helper function to get locale from entry ID
function getLocaleFromId(id: string): string {
	if (id.startsWith('fr/')) return 'fr'
	if (id.startsWith('en/')) return 'en'
	return 'en' // default to English
}

// Helper function to get base ID without locale prefix
function getBaseId(id: string): string {
	if (id.startsWith('fr/')) return id.replace('fr/', '')
	if (id.startsWith('en/')) return id.replace('en/', '')
	return id
}

const allPosts = await getCollection('blog')
// Filter to only English entries
const englishPosts = allPosts.filter((entry) => {
	const locale = getLocaleFromId(entry.id)
	return locale === 'en'
})

// Content
// - SEO
const SEO = {
	title: 'pytagora | Work Projects',
	description:
		"Explore pytagora's latest work projects designed to enhance productivity, ensure top-notch security, and integrate seamlessly with your favorite tools."
}

// Sort blog posts by publication date (newest first)
const sortedBlogPosts = englishPosts.sort((a: any, b: any) => {
	return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
})
// Define the grid column pattern (repeats every 6 posts)
const columnMap = ['1', '3', '1', '2', '2', '3']
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero
		title="What weâ€™re thinking about."
		text="Notes from the studio on work, process, and creative problem-solving. No fluff, just ideas we wanted to share."
	/>
	<Section classes="pt-0!">
		<Row classes="grid-cols-3! gap-y-15!">
			{
				sortedBlogPosts.map((post: any, index: number) => {
					const gridColumn = columnMap[index % columnMap.length]

					return (
						<Col span="1" start={gridColumn}>
							<BlogCard
								title={post.data.title}
								image={post.data.image}
								video={post.data.video}
								link={`/blog-v2/${getBaseId(post.id)}`}
								date={post.data.pubDate}
								author={post.data.author}
								classes="h-full"
							>
								{post.data.description}
							</BlogCard>
						</Col>
					)
				})
			}
		</Row>
	</Section>
</Layout>
