---
// About Page
// ------------
// Description: The about page is a page that displays information about the company.

// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - Blocks
import BasicHeroCTA from '../components/blocks/hero/BasicHeroCTA.astro'
import Video from '../components/blocks/video/VideoSection.astro'
import TeamIntro from '../components/blocks/team/TeamIntro.astro'
import Statistics from '../components/blocks/stats/Statistics.astro'
import TestimonialsBasic from '../components/blocks/testimonials/TestimonialsBasic.astro'
import BrandSlider from '../components/blocks/slider/BrandSlider.astro'

// Content
// - SEO
const SEO = {
	title: 'pytagora | About us',
	description: 'About us'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<BasicHeroCTA
		title="Small team, sharp minds."
		text="pytagora is a compact crew of designers, developers, and brand strategists who think small teams can do big things — especially when they like each other. We work closely (and laugh often), fueled by strong opinions, open Slack threads, and the occasional espresso-fueled hot take. We believe the best work comes from good process, honest feedback, and the freedom to chase weird ideas all the way through. Collaborating directly with our clients. We’re remote-first, time-zone friendly, and occasionally chaotic in the best way."
		type="vertical"
		titleSpan="10"
		classes="pt-40! [&_h1]:max-w-[920px] lg:[&_p]:columns-2 [&_.card]:max-w-full!"
	/>
	<Video
		video="https://oxygenna-themes.b-cdn.net/pytagora-astro/videos/about-us-video.mp4"
		classes="pt-0!"
	/>
	<TeamIntro />
	<Statistics />
	<TestimonialsBasic sectionType="none" />
	<BrandSlider />
</Layout>
