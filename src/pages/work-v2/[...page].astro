---
// Work Page
// ------------
// Description: The work page is a page that displays all the work projects.

// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - Blocks
import Hero from '../../components/blocks/hero/BasicHeroCTA.astro'
import ProjectHighlights from '../../components/blocks/work/ProjectHighlights.astro'
import Testimonials from '../../components/blocks/testimonials/TestimonialsAlt.astro'
import Statistics from '../../components/blocks/stats/Statistics.astro'
import Blog from '../../components/blocks/blog/PostsSlider.astro'

// - Collection
import { getCollection } from 'astro:content'

export async function getStaticPaths({ paginate }: any) {
	// Helper function to get locale from entry ID
	function getLocaleFromId(id: string): string {
		if (id.startsWith('fr/')) return 'fr'
		if (id.startsWith('en/')) return 'en'
		return 'en' // default to English
	}

	const allWorkProjects = await getCollection('work')
	// Filter to only English entries (en/ prefix or no prefix)
	const englishProjects = allWorkProjects.filter((entry) => {
		const locale = getLocaleFromId(entry.id)
		return locale === 'en'
	})
	// Generate pages from our array of work, with 6 to a page
	return paginate(englishProjects, { pageSize: 6 })
}
// All paginated data is passed on the "page" prop
const { page } = Astro.props as any

// Content
// - SEO
const SEO = {
	title: 'pytagora | Work Projects',
	description:
		"Explore pytagora's latest work projects designed to enhance productivity, ensure top-notch security, and integrate seamlessly with your favorite tools. Join thousands of satisfied users and transform your workflow with pytagora today!"
}
// Function to sort case studies by date
const sortedWorkProjects = page.data.sort((a: any, b: any) => {
	return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
})
---

<Layout title={SEO.title} description={SEO.description} navigation="sticky">
	<Hero
		title="What happens when it all clicks."
		text="From bold beginnings to finished builds â€” hereâ€™s what happens when design, dev, and caffeine align."
		titleSpan="8"
		type="vertical"
	/>
	<Statistics />
	<ProjectHighlights
		data={sortedWorkProjects}
		{...page.lastPage === 1
			? {}
			: {
					pagination: {
						first: page.url.first,
						current: page.url.current,
						length: page.lastPage,
						prev: page.url.prev,
						next: page.url.next,
						last: page.url.last,
						size: page.size,
						total: page.total
					}
				}}
	/>
	<Testimonials />
	<Blog />
</Layout>
