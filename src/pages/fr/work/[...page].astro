---
// Página de Trabajo
// ------------
// Descripción: La página de trabajo muestra todos los proyectos de trabajo.

// Components
// - Layout
import Layout from '../../../layouts/Layout.astro'
// - Blocks
import Hero from '../../../components/blocks/hero/BasicHeroCTA.astro'
import ProjectHighlights from '../../../components/blocks/work/ProjectMediaHighlights.astro'
import Testimonials from '../../../components/blocks/testimonials/TestimonialsBasic.astro'
import BrandSlider from '../../../components/blocks/slider/BrandSlider.astro'
// - UI
import Card from '../../../components/ui/cards/Card.astro'
// - Collection
import { getCollection } from 'astro:content'

export async function getStaticPaths({ paginate }: any) {
	// Helper function to get locale from entry ID
	function getLocaleFromId(id: string): string {
		if (id.startsWith('fr/')) return 'fr'
		if (id.startsWith('en/')) return 'en'
		return 'en' // default to English
	}

	const allProjects = await getCollection('work')
	// Filter to only Spanish entries (fr/ prefix)
	const spanishProjects = allProjects.filter((entry) => {
		const locale = getLocaleFromId(entry.id)
		return locale === 'fr'
	})
	// Generate pages from our array of work, with 6 to a page
	return paginate(spanishProjects, { pageSize: 6 })
}
// All paginated data is passed on the "page" prop
const { page } = Astro.props as any

// Content
// - SEO
const SEO = {
	title: 'pytagora | Proyectos de Trabajo',
	description:
		"Explora los últimos proyectos de trabajo de pytagora diseñados para mejorar la productividad, garantizar seguridad de primer nivel e integrarse perfectamente con tus herramientas favoritas. ¡Únete a miles de usuarios satisfechos y transforma tu flujo de trabajo con pytagora hoy!"
}
// Function to sort case studies by date
const sortedWorkProjects = page.data.sort((a: any, b: any) => {
	return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
})
---

<Layout title={SEO.title} description={SEO.description} navigation="sticky">
	<Hero
		title="Trabajo que hicimos y logramos."
		text="Desde comienzos audaces hasta construcciones terminadas — esto fr lo que sucede cuando el diseño, el desarrollo y la cafeína se alinean."
	/>
	<ProjectHighlights
		data={sortedWorkProjects}
		{...page.lastPage === 1
			? {}
			: {
					pagination: {
						first: page.url.first,
						current: page.url.current,
						length: page.lastPage,
						prev: page.url.prev,
						next: page.url.next,
						last: page.url.last,
						size: page.size,
						total: page.total
					}
				}}
	/>
	<Testimonials />
	<BrandSlider
		title="Marcas con las que hemos trabajado"
		text="Desde futuros unicornios hasta leyendas emergentes, trabajamos con marcas que no tienen miedo de hacer ruido."
	/>
</Layout>

