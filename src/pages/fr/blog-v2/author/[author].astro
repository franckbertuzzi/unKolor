---
// Página de Autor del Blog
// ------------
// Descripción: La página de autor del blog muestra todas las publicaciones del blog escritas por un autor específico.

// Components
// - Layout
import Layout from '../../../../layouts/Layout.astro'
import Section from '../../../../components/ui/Section.astro'
import Row from '../../../../components/ui/Row.astro'
import Col from '../../../../components/ui/Col.astro'
// - Blocks
import BlogCard from '../../../../components/ui/cards/BlogCard.astro'
import Hero from '../../../../components/blocks/hero/BasicHeroCTA.astro'

// Data
import { getCollection } from 'astro:content'

export async function getStaticPaths() {
	// Helper function to get locale from entry ID
	function getLocaleFromId(id: string): string {
		if (id.startsWith('fr/')) return 'fr'
		if (id.startsWith('en/')) return 'en'
		return 'en' // default to English
	}

	// Helper function to get base ID without locale prefix
	function getBaseId(id: string): string {
		if (id.startsWith('fr/')) return id.replace('fr/', '')
		if (id.startsWith('en/')) return id.replace('en/', '')
		return id
	}

	const allAuthors = await getCollection('blog')
	// Filter to only Spanish entries
	const spanishPosts = allAuthors.filter((entry) => {
		const locale = getLocaleFromId(entry.id)
		return locale === 'fr'
	})
	const uniqueAuthors = [
		...new Set(spanishPosts.map((blogAuthor) => blogAuthor.data.author).flat())
	]

	return uniqueAuthors.map((author) => {
		const filteredGuides = spanishPosts.filter((blogAuthor) =>
			blogAuthor.data.author.includes(author)
		)
		return {
			params: { author },
			props: { authors: filteredGuides }
		}
	})
}
const { author } = Astro.params
const { authors } = Astro.props

// Helper function to get base ID without locale prefix
function getBaseId(id: string): string {
	if (id.startsWith('fr/')) return id.replace('fr/', '')
	if (id.startsWith('en/')) return id.replace('en/', '')
	return id
}

// Format and hold the formatted author name in one statement
const formattedAuthorName = author
	.split('-')
	.map((part) => part.charAt(0).toUpperCase() + part.slice(1))
	.join(' ')

// Content
// - SEO
const SEO = {
	title: `pytagora | Autor ` + formattedAuthorName,
	description:
		'Explora las últimas noticias de pytagora diseñadas para mejorar la productividad, garantizar seguridad de primer nivel e integrarse perfectamente con tus herramientas favoritas. ¡Únete a miles de usuarios satisfechos y transforma tu flujo de trabajo con pytagora hoy!'
}

// - Page Header
const header = {
	title: `Publicaciones del blog escritas por ` + formattedAuthorName,
	text: `Ver todas las últimas publicaciones de pytagora de ` + formattedAuthorName + `.`
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} titleSpan="8" type="vertical" />
	<Section classes="pt-0!">
		<Row>
			{
				authors.map((post: any) => {
					return (
						<Col span="4">
							<BlogCard
								title={post.data.title}
								image={post.data.image}
								video={post.data.video}
								link={`/fr/blog-v2/${getBaseId(post.id)}`}
								date={post.data.pubDate}
								author={author}
								locale="fr"
								classes="h-full"
							>
								{post.data.description}
							</BlogCard>
						</Col>
					)
				})
			}
		</Row>
	</Section>
</Layout>
